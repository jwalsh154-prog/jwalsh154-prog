<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/your_background_image" /> <!-- yahan apni image daalein -->

    <!-- Overlay to darken image if needed -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- semi-transparent black overlay -->

    <!-- Content on top of image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:text="NewBeginnings"
            android:textColor="#40E0D0"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consistency Create Change "
            android:textSize="16sp"
            android:textColor="#DDDDDD"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="386dp"
            android:layout_weight="1" /> <!-- spacer to push buttons to bottom -->

        <!-- Buttons at bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_login_btn"
                android:textSize="16sp"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_login_btn"
                android:textSize="16sp"
                android:layout_marginStart="10dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
